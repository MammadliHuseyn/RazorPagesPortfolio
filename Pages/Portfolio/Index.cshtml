@page
@model MyPortfolio_MVC_CORE.PortfolioModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/Images/fav128.ico" rel="shortcut icon" type="image/x-icon" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,500&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Crimson+Text&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.2/animate.min.css">
    <link href="~/css/hover-min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Lato&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/aos-master/dist/aos.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/css/bootstrap.min.css"
          integrity="sha256-L/W5Wfqfa0sdBNIKN9cG6QA5F2qx4qICmU2VgLruv9Y=" crossorigin="anonymous" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"
            integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
    <title>@Model.Owner.Name @Model.Owner.Surname</title>
    <link href="~/css/Style.css" rel="stylesheet" />

</head>

<body>
    <div class="scrollTop" id="scrollTop">
        <button><i class="fa fa-angle-double-up"></i></button>
    </div>

    <!--Navbar-->
    <nav style="position:sticky; top:0" class="navbar navbar-expand-lg navbar-light shadow-sm">
        <a class="navbar-brand animated slideInDown hvr-grow" href="#"> <img src="~/Images/fav.ico" style="width:5%;height:5%;" />Mammadli</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
            </ul>
        </div>
    </nav>
    <!--/Navbar-->
    <!--Entry Section-->
    <section class="Entry">
        <div class="container">
            <div class="row text-center bg-red mt-2 animated slideInUp">
                <div class="headEntry col-lg-12">
                    <div class="hvr-grow">
                        <img src="/Images/fav.ico" alt="Huseyn Mammadli" />
                        <h5>Web Developing</h5>
                        <h1>
                            @Model.Owner.Name
                            @Model.Owner.Surname
                        </h1>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--/Entry Section-->



    <!--Main Section Container-->
    <div class="container">
        <!--Activities-->
        <div class="content-headers mt-4">
            <h5>My Activities</h5>
        </div>
        <div class="row Activities">
            @foreach (var item in Model.Activities.Where(x => x.DeletedTime == null))
            {
                var MainImg = Model.MainImg.Where(y => y.ActivityId == item.Id).FirstOrDefault();

                <div data-aos="fade-up" data-aos-duration="700" class="col-lg-4 col-md-6 col-sm-12 mt-3 mb-3">
                    <div class="card hvr-shrink">
                        <img src="@MainImg.FileDirectory" class="card-img-top card-img">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Desc</p>
                        </div>
                    </div>
                </div>

            }
        </div>
        <!--/Activities-->
        <!--Services-->
        <div class="content-headers mt-4">
            <h5>My Services</h5>
        </div>
        <div class="row Services mt-5 mb-2">
            @foreach (var item in Model.Services.Where(x => x.DeletedTime == null))
            {
                <div data-aos="fade-up" data-aos-duration="700" class="col-lg-4 col-md-6 col-sm-12  mt-2 mb-2">
                    <div class="service-content p-3 rounded hvr-grow">
                        <div class="row">
                            <div class="col-lg-8">
                                <h5>@item.Name</h5>
                            </div>
                            <div class="col-lg-4">
                                <i class="@item.Icon"></i>
                            </div>
                            <div class="col-lg-12">
                                <p>@item.Desc</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <!--/Services-->
        <!--Contact Info-->
        <div class="content-headers mt-4">
            <h5>Contact</h5>
        </div>
            <div class="row mb-5">
                <!--Owner Location-->
                <div data-aos="fade-up" data-aos-duration="700" class="col-lg-4 col-sm-12 text-center">
                    <div class="row">
                        <div class="col-lg-12">
                            <i class="fas fa-landmark fa-lg white-text mr-md-5 mr-3 fa-2x hvr-bounce-in contactIcons mb-4 ml-5"></i>
                        </div>
                        <div class="col-lg-12">
                            <p>@Model.Owner.Location</p>
                        </div>
                    </div>
                </div>
                <!--/Owner Location-->
                <!--Owner Tel-->
                <div data-aos="fade-up" data-aos-duration="700" class="col-lg-4 col-sm-12 text-center">
                    <div class="row">
                        <div class="col-lg-12">
                            <i class="fas fa-mobile fa-lg white-text mr-md-5 mr-3 fa-2x hvr-bounce-in contactIcons mb-4 ml-5"></i>
                        </div>
                        <div class="col-lg-12">
                            <p style="cursor:pointer"><a href="tel:+994505195417">@Model.Owner.Tel</a></p>
                        </div>
                    </div>
                </div>
                <!--/Owner Tel-->
                <!--Owner Email-->
                <div data-aos="fade-up" data-aos-duration="700" class="col-lg-4 col-sm-12 text-center">
                    <div class="row">
                        <div class="col-lg-12">
                            <i class="fas fa-envelope fa-lg white-text mr-md-5 mr-3 fa-2x hvr-bounce-in contactIcons mb-4 ml-5"></i>
                        </div>
                        <div class="col-lg-12">
                            <p><a href="mailto:@Model.Owner.Email">@Model.Owner.Email</a></p>
                        </div>
                    </div>
                </div>
                <!--/Owner Email-->
            </div>
        <!--/Contact Info-->
    </div>
    
    <!--/Main Section Container-->
    <!--Footer -->
    <footer class="page-footer font-small cyan darken-3">

        <!-- Footer Elements -->
        <div class="container">

            <!-- Grid row-->
            <div class="row">

                <!-- Grid column -->
                <div class="col-md-12 mt-5 py-5">
                    <div class="mb-5 d-flex justify-content-around">

                        <!-- Facebook -->
                        <a data-aos='fade-up' data-aos-duration='1000' target="_blank" href="https://www.facebook.com/huseyn2001c" class="fb-ic ">
                            <i class="hvr-bounce-in fab fa-facebook-f fa-lg white-text mr-md-5 mr-3 fa-2x socialIcons"> </i>
                        </a>
                        <!-- Twitter -->
                        <a data-aos='fade-up' data-aos-duration='1000' href="#" target="_blank" class="tw-ic  ">
                            <i class="hvr-bounce-in fab fa-twitter fa-lg white-text mr-md-5 mr-3 fa-2x socialIcons"> </i>
                        </a>
                        <!--Linkedin -->
                        <a data-aos='fade-up' data-aos-duration='1000' target="_blank" href="#" class="li-ic  ">
                            <i class="hvr-bounce-in fab fa-linkedin-in fa-lg white-text mr-md-5 mr-3 fa-2x socialIcons"> </i>
                        </a>
                        <!--Instagram-->
                        <a data-aos='fade-up' data-aos-duration='1000' target="_blank" href="https://www.instagram.com/huseynmle/" class="ins-ic  ">
                            <i class="hvr-bounce-in fab fa-instagram fa-lg white-text mr-md-5 mr-3 fa-2x socialIcons"> </i>
                        </a>
                        <!--Github-->
                        <a data-aos='fade-up' data-aos-duration='1000' target="_blank" class="" href="https://github.com/MammadliHuseyn">
                            <i class=" hvr-bounce-in fab fa-github fa-lg white-text mr-md-5 mr-3 fa-2x socialIcons"></i>
                        </a>
                    </div>
                </div>
                <!-- Grid column -->

            </div>
            <!-- Grid row-->

        </div>
        <!-- Footer Elements -->
        <!-- Copyright -->
        <div class="footer-copyright text-center py-3">
            <p>
                © 2019 Copyright: @Model.Owner.Name  @Model.Owner.Surname
            </p>
        </div>
        <!-- Copyright -->

    </footer>
    <!--/Footer -->


    <script src="~/js/site.js"></script>
    <script src="~/aos-master/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>
</body>

</html>
