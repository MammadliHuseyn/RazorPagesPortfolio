@page
@model MyPortfolio_MVC_CORE.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Service</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Service.Name" class="control-label"></label>
                <input asp-for="Service.Name" class="form-control" />
                <span asp-validation-for="Service.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Service.Desc" class="control-label"></label>
                <input asp-for="Service.Desc" class="form-control" />
                <span asp-validation-for="Service.Desc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Service.Icon" class="control-label"></label>
                <input asp-for="Service.Icon" class="form-control" />
                <a class="text-info" href="https://fontawesome.com/icons?d=gallery" target="_blank">Take icons from here</a>
                <span asp-validation-for="Service.Icon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Service.CreatedTime" class="control-label"></label>
                <input asp-for="Service.CreatedTime" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" min="2019-01-01" max="2030-12-31" class="form-control" />
                <span asp-validation-for="Service.CreatedTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Service.OwnerId" class="control-label"></label>
                <select asp-for="Service.OwnerId" class ="form-control" asp-items="ViewBag.OwnerId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
