@page
@model MyPortfolio_MVC_CORE.Pages.Images.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MainImage[0].FileDirectory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MainImage[0].Activity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.MainImage) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FileDirectory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activity.Name)
            </td>
            <td>
                <a asp-page="./Edit" class="btn btn-primary" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" class="btn btn-secondary" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
